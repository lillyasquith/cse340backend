<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error=> { %>
      <li>
        <%= error.msg %>
      </li>
    <% }) %>
  </ul>
<% } %>

<div id="edit-form">
  <h1><%- title %></h1>
  <!-- Account Update Form -->
  <form class="form-container" action="/account/edit-account" method="post">
    <fieldset>
      <label class="form-label" for="fname">First Name:
        <input type="text" id="fname" name="account_firstname" required value="<%= locals.account_firstname %>">
      </label>

      <label class="form-label" for="lname">Last Name: 
        <input type="text" id="lname" name="account_lastname" required value="<%= locals.account_lastname %>">
      </label>

      <label class="form-label">Email:
        <input type="email" id="email" name="account_email" required value="<%= locals.account_email %>">
      </label>
    </fieldset>
    <button class="submitBtn" type="submit">Update</button>
    <input type="hidden" name="account_id"
    <% if(locals.account_id) {
      %> value="<%= locals.account_id %>" <%
    } %>>
  </form>
 

  <!-- Change Password Form -->
  <form action="/account/edit-account" method="post">
    <h2>Update Password</h2>
    <fieldset>
      <p class="p-text">Passwords must be minimum of 12
        characters and include 1 capital letter,
        1 number and 1 special character.</p>
      <p class="p-text">*note your original password will be changed</p>
      <label class="form-label">Password:
        <input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
      </label>
      <p class="i-text">Passwords must be minimum of 12
        characters and include 1 capital letter,
        1 number and 1 special character.</p>
    </fieldset>
    <button class="submitBtn" type="submit">Change Password</button>
    <input type="hidden" name="account_id"
    <% if(locals.account_id) {
      %> value="<%= locals.account_id %>" <%
    } %>>
  </form>
  
</div>