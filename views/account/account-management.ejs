<!-- displaying a flash message -->
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
        <li><%= error.msg %></li>
        <% }) %>
    </ul> 
    <% } %>

<div id="management-account">
    <h1><%- title %></h1>
    <h2>Welcome <%= locals.accountData.account_firstname %></h2> 
    <p>You're logged in.</p>
    <a href="/account/">Edit Account Information</a>

    <% if (locals.accountData.account_type == "Admin" 
    || locals.accountData.account_type == "Employee") { %>
        <h2>Welcome <%= locals.accountData.account_firstname %></h2>
        <h3>Inventory Management</h3>
        <a href="/inventory/vehicle-management"></a>
    <% } 

</div>